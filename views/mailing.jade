extends layout
block  content
  form(method='POST').col-md-offset-3.col-md-6
    .form-group
      label(for='email')=__('E-mailadres')
      input.form-control(type='email', name='email', id='email', placeholder='foo@bar.com', required)
    button(type='submit' class='btn btn-default')=__('Meld je aan voor de mailinglijst')