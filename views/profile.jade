extends layout
block title
  | Profiel
block content
  h1=__('Profiel')
  form#settings(method='post')
    .form-group
      .checkbox
        label
          input(type='checkbox',name='vegetarian', checked=user.vegetarian? "checked": undefined)
          | #{__('Ik eet vegetarisch')}
    if isbus_quickhack
      .form-group
        .checkbox
          label
            input(type='checkbox',name='bus',checked=user.bus?'checked':undefined)
            | Ik wil meerijden met de bus
    .form-group
      label(for='specialNeeds')= __('Speciale opmerkingen (e.g. allergie)')
      input.form-control(type='text',, name="specialNeeds", value=user.specialNeeds)
    .form-group
      button.btn.btn-primary(type='submit') Sla instellingen op
  a.btn.btn-primary(href='/tickets/'+ user.ticket)=__('Ticket printen')
  div  
    a.btn(href='/logout')=__('Uitloggen')
