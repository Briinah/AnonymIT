mixin ticket(ticket)
  if ticket && !ticket.ownedBy
    .ticket
      h2 Activatiecode:
        strong #{ticket._id}
      p Acitveer je ticket op http://anonymit.nl/.
      p.
        Dit ticket is overigens je toegangsbewijs.
        Als je dit ticket kwijtraakt kun je hem via de website opnieuw printen bij 'Mijn Profiel'.
      img(src="/tickets/#{ticket._id}/barcode")

extends layout
block content
  style.
    .ticket {
     margin-top: 80px;
     margin-bottom: 80px;
    }
    @media print {
      footer {
        page-break-after: always;
      }
    }
  - for (var i = 0, x = 3; i < tickets.length; i += x)
      div
       - for (var j = 0; j < x; j++)
        +ticket(tickets[i+j])
      footer
